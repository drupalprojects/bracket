/**
 * Implementation of hook_access
 */
function bracket_access($op, $node) {

  global $user;
  
  switch ($op) {
    case 'view':
      // if node is published, return view access
      if ($node->status) {
        return user_access('view brackets');
      }
      // if unpublished, return update access - users who can update the node should be able to view it
      else  {
        return node_access('update', $node);
      }
      break;
    case 'create':
      return user_access('create brackets');
      break;
    case 'update':
    case 'delete':
      return user_access("edit brackets") || (user_access("edit own brackets") && ($user->uid == $node->uid));
      break;
  }
}

