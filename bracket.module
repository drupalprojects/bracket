/**
 * Implementation of hook_view
 */
function bracket_view($node, $teaser=FALSE, $page=FALSE) {

  if ($teaser) {
    if (!property_exists($node, 'content') || !$node->content['teaser']) {
      $node->content['teaser'] = array(
        '#value' => check_markup($node->teaser, $node->format, FALSE)
      );
    }
    return $node;
  }
  
  $node->content['body'] = array(
    '#value' => check_markup($node->body, $node->format, FALSE)
  );
  
  $node->content['bracket'] = array(
    '#value' => theme('bracket_view', $node, $teaser, $page),
    '#weight' => 10
  );
  
  return $node;
}

/**
 * Theming function for bracket_view
 */
function theme_bracket_view(&$node, $teaser=FALSE, $page=FALSE) {

  // Add the css file
  drupal_add_css(drupal_get_path('module', 'bracket') . '/bracket.css');
  
  $output = '<div class="bracket">' . "\n";

  if (!$node->options['hide_pdf']) {
    $output .= '<div class="bracket-print-link">' . l(t('Click here for a printable version'), 'node/' . $node->nid . '/pdf') . "</div>\n";
  }
  if ($node->options['display'] == 'HTML') {
    $output .= theme('bracket_' . $node->design, $node);
  }
  else {
    $output .= '<div class="bracket-img"><img src="' . url('node/' . $node->nid . '/image') . '"></div>' . "\n";
  }
  
  $output .= '</div><div class="clear-block"></div>' . "\n";

  return $output;
}

/**
 * Implementation of hook_load().
 */
function bracket_prepare(&$node) {

  // add default bracket fields
  if (arg(1) == 'add') {
    $bracket = new Bracket();
    foreach ($bracket as $key => $value) {
      $node->$key = $value;
    }
  }
}

/**
 * Implementation of hook_load().
 */
function bracket_load($node) {

  // load current node values
  $bracket = bracket_db_load($node);

  return $bracket;
}

